{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "es6"
    ],
    "types": [
      "bs58",
      "chai",
      "mocha",
      "node",
      "sinon",
      "sinon-test"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "test"
  ]
}
