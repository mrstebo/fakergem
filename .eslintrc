{
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "env": {
    "mocha": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "Promise": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": ["error", "always"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "object-curly-spacing": ["error", "always"],
    "quotes": ["error", "double"],
    "semi": ["error"],
    "space-before-blocks": ["error", "always"]
  }
}
